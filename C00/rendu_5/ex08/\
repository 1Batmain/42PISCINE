set-option -g prefix M-1
bind-key 2 split-window 
bind-key z resize-pane -Z

set -g mouse on


# Bind Ctrl+h to move to the pane on the left
bind -n C-h select-pane -L

# Bind Ctrl+j to move to the pane below
bind -n C-j select-pane -D

# Bind Ctrl+k to move to the pane above
bind -n C-k select-pane -U

# Bind Ctrl+l to move to the pane on the right
bind -n C-l select-pane -R



